<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_70dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/size_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_answer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Никак не могу зарегестрироваться к вам на прием" />

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_16dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        tools:text="Да. PrimeDoc является телемедицинским проектом медицинского центра Prime Clinic и работает под лицензией НГМУ № 3419, 002583, от 24 августа 2018 года, выданной Министерством Здравоохранения Кыргызской Республики." />

    <ImageView
        android:id="@+id/iv_arrow_down"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_70dp"
        android:layout_marginEnd="@dimen/size_16dp"
        android:src="@drawable/ic_arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:background="@color/grey_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>