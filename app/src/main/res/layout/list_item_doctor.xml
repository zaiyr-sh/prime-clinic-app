<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_100dp"
    android:paddingTop="@dimen/size_10dp"
    android:paddingStart="@dimen/size_10dp"
    android:paddingEnd="@dimen/size_10dp">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="@dimen/size_70dp"
        android:layout_height="@dimen/size_70dp"
        android:background="@drawable/outline_shape"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/shape_filled_dot"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_toEndOf="@id/iv_profile"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        tools:text="Аскарова Жасмин Асановна"
        android:textSize="@dimen/size_18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/iv_profile"
        android:maxLines="2"
        tools:text="Врач высшей категории"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/size_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_light"/>
</RelativeLayout>
